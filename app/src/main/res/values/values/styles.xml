<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitleText">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:fontFamily">@font/playfair_display</item>
    </style>

    <style name="ViewArtistIndicator">
        <item name="android:background">@color/onPrimary</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TvDetailLabelStyle">
        <item name="android:textSize">@dimen/item_year_text_size</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemArtistTitleText">
        <item name="android:textSize">@dimen/item_artist_text_size</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvTitleDetailStyle">
        <item name="android:textSize">@dimen/tv_title_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvDetailTextStyle">
        <item name="android:textSize">@dimen/item_artist_text_size</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContainerStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CollectionTextStyle">
        <item name="android:textSize">@dimen/item_year_text_size</item>
        <item name="android:textColor">@color/option_color</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/custom_card_view_style</item>
        <item name="cornerSizeTopRight">@dimen/iv_favorite_margin</item>
        <item name="cornerSizeTopLeft">@dimen/iv_favorite_margin</item>
        <item name="cornerSizeBottomRight">@dimen/custom_card_view_style</item>
        <item name="cornerSizeBottomLeft">@dimen/custom_card_view_style</item>
    </style>

    <style name="OptionButtonStyle">
        <item name="backgroundTint">@color/option_color</item>
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
