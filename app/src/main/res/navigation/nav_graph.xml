<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.quiz.QuizFragment"
        android:label="QuizFragment">
        <action
            android:id="@+id/action_quizFragment_to_gameBadgeFragment"
            app:destination="@id/gameBadgeFragment" />
    </fragment>

    <fragment
        android:id="@+id/gameBadgeFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.badge.GameBadgeFragment"
        android:label="GameBadgeFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.home.HomeFragment"
        android:label="HomeFragment">

        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_homeFragment_to_reminderFragment"
            app:destination="@id/reminderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_analysisResultFragment"
            app:destination="@id/analysisResultFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.chat.ChatFragment"
        android:label="ChatFragment" />

    <fragment
        android:id="@+id/reminderFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.reminder.ReminderFragment"
        android:label="ReminderFragment" />

    <fragment
        android:id="@+id/badgesFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.badge.GameBadgeFragment"
        android:label="Rozetler" />

    <fragment
        android:id="@+id/analysisResultFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.result.AnalysisResultFragment"
        android:label="Analysis Result">
        <argument
            android:name="resultText"
            app:argType="string" />
        <argument
            android:name="imageUri"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="resultJson"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_analysisResultFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.onboarding.OnboardingFragment"
        android:label="Onboarding" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.esmanureral.pupilicahackathon.ui.profile.ProfileFragment"
        android:label="Profil YÃ¶netimi">
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>