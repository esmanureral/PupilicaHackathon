<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smile_background"
    android:fillViewport="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smile_background">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/smile_background"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/smile_text_primary"
            app:title="Diş Fırçalama Hatırlatması"
            app:titleTextColor="@color/smile_text_primary" />

        <androidx.cardview.widget.CardView
            android:id="@+id/quickOptionsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/light_green"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvQuickOptionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabah-Akşam Saati Seçiniz"
                    android:textColor="@color/smile_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/morningCard"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/eveningCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvQuickOptionsTitle">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_sunrise"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/sunset"
                            android:clickable="true"
                            android:contentDescription="Sabah Hatırlatması"
                            android:focusable="true"
                            android:scaleType="centerCrop" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/eveningCard"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/morningCard"
                    app:layout_constraintTop_toBottomOf="@id/tvQuickOptionsTitle">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_sunset"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/evening"
                            android:clickable="true"
                            android:contentDescription="Akşam Hatırlatması"
                            android:focusable="true"
                            android:scaleType="centerCrop" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/daySelectionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/task_card_pink"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quickOptionsCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvDaySelectionTitle"
                    android:layout_width="161dp"
                    android:layout_height="17dp"
                    android:text="Tekrar Eden Günler"
                    android:textColor="@color/smile_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_everyday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Her Günü Seç"
                    android:textColor="@color/smile_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:buttonTint="@color/smile_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDaySelectionTitle" />

                <LinearLayout
                    android:id="@+id/dayCheckboxesLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_everyday">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_sunday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pazar"
                            android:textColor="@color/smile_text_primary"
                            android:textSize="14sp"
                            app:buttonTint="@color/smile_blue" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_monday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pazartesi"
                            android:textColor="@color/smile_text_primary"
                            android:textSize="14sp"
                            app:buttonTint="@color/smile_blue" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_tuesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salı"
                            android:textColor="@color/smile_text_primary"
                            android:textSize="14sp"
                            app:buttonTint="@color/smile_blue" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_wednesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Çarşamba"
                            android:textColor="@color/smile_text_primary"
                            android:textSize="14sp"
                            app:buttonTint="@color/smile_blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_thursday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Perşembe"
                            android:textColor="@color/smile_text_primary"
                            android:textSize="14sp"
                            app:buttonTint="@color/smile_blue" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_friday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cuma"
                            android:textColor="@color/smile_text_primary"
                            android:textSize="14sp"
                            app:buttonTint="@color/smile_blue" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_saturday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cumartesi"
                            android:textColor="@color/smile_text_primary"
                            android:textSize="14sp"
                            app:buttonTint="@color/smile_blue" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save_reminder"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/light_green"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/save"
                    app:iconGravity="textStart"
                    app:iconTint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dayCheckboxesLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_active_reminders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="0dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daySelectionCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvActiveRemindersTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif Hatırlatmalar"
                    android:textColor="@color/smile_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/layout_single_reminder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/smile_blue_light"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:cornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvActiveRemindersTitle">

                    <TextView
                        android:id="@+id/tv_active_reminder_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Henüz hatırlatma ayarlanmamış"
                        android:textColor="@color/smile_blue"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_single_reminder"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/red"
                        android:contentDescription="Hatırlatmayı Sil"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_delete"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="@color/white" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_active_reminders" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>