<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smile_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- Confetti Animation (Background) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/confettiAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="confetti.json"
            app:lottie_loop="true" />

        <!-- Congratulation Text -->
        <TextView
            android:id="@+id/congratulationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_background_rounded"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/congratulations_badge_unlocked"
            android:textColor="@color/smile_text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- New Badge Unlocked Text -->
        <TextView
            android:id="@+id/newBadgeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/text_background_rounded_light"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/new_badge_unlocked"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@id/badgeCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/congratulationText" />

        <!-- Badge Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/badgeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="48dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toTopOf="@id/buttonContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newBadgeText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Badge Image -->
                <ImageView
                    android:id="@+id/badgeImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/circle_blue_background"
                    android:contentDescription="Rozet"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:src="@drawable/badge1" />

                <!-- Badge Name -->
                <TextView
                    android:id="@+id/badgeNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="Yeni Rozet"
                    android:textColor="@color/smile_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Button Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/badgeCard">

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/blue"
                android:elevation="4dp"
                android:text="@string/continue_quiz"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="textEnd"
                app:iconPadding="12dp"
                app:iconSize="20dp" />

            <!-- View Badges Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewBadges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_blue_background"
                android:backgroundTint="@android:color/transparent"
                android:elevation="2dp"
                android:text="@string/view_badges"
                android:textColor="@color/blue"
                android:textSize="18sp"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
