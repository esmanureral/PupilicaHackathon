<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/confettiAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="confetti.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/congratulationText"
            style="@style/DarkGreyBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_24dp"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginBottom="@dimen/_8dp"
            android:background="@drawable/text_background_rounded"
            android:elevation="@dimen/_8dp"
            android:gravity="center"
            android:padding="@dimen/_16dp"
            android:text="@string/congratulations_badge_unlocked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/newBadgeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_32dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:background="@drawable/text_background_rounded_light"
            android:elevation="@dimen/elevation"
            android:gravity="center"
            android:padding="@dimen/_12dp"
            android:text="@string/new_badge_unlocked"
            android:textColor="@color/gray"
            android:textSize="@dimen/item_artist_text_size"
            app:layout_constraintBottom_toTopOf="@id/badgeCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/congratulationText" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badgeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_24dp"
            android:layout_marginBottom="@dimen/image_view"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_24dp"
            app:cardElevation="@dimen/_12dp"
            app:layout_constraintBottom_toTopOf="@id/buttonContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newBadgeText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_32dp">

                <ImageView
                    android:id="@+id/badgeImage"
                    android:layout_width="@dimen/image_size_large"
                    android:layout_height="@dimen/image_size_large"
                    android:layout_marginBottom="@dimen/margin_xlarge"
                    android:background="@drawable/circle_blue_background"
                    android:contentDescription="@string/badge_image"
                    android:elevation="@dimen/card_elevation_large"
                    android:padding="@dimen/padding_xlarge"
                    android:src="@drawable/badge1" />

                <TextView
                    android:id="@+id/badgeNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/badge_name"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_xxxlarge"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/badgeCard">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:backgroundTint="@color/blue"
                android:elevation="@dimen/card_elevation_medium"
                android:text="@string/continue_quiz"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                app:cornerRadius="@dimen/card_corner_radius_medium"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="textEnd"
                app:iconPadding="@dimen/padding_medium"
                app:iconSize="@dimen/icon_size_medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewBadges"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:background="@drawable/button_blue_background"
                android:backgroundTint="@android:color/transparent"
                android:elevation="@dimen/card_elevation_small"
                android:text="@string/view_badges"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_xlarge"
                app:cornerRadius="@dimen/card_corner_radius_medium" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
